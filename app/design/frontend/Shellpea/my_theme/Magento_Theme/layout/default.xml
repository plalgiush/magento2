<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/logo.svg</argument>
                <argument name="logo_width" xsi:type="number">200</argument>
                <argument name="logo_height" xsi:type="number">200</argument>
                <argument name="logo_alt" xsi:type="string">Logo name</argument>
            </arguments>
        </referenceBlock>
        
        <referenceContainer name="content.top">
            <block class="Magento\Framework\View\Element\Template" name="task-text" template="Magento_Theme::test.phtml" /> 
        </referenceContainer>      

        <referenceBlock name="footer_links" remove="true"/>
        <referenceBlock name="form.subscribe" remove="true"/>
        <referenceBlock name="copyright" remove="true"/>

        <!-- <referenceContainer name="footer">
            <block class="Magento\Framework\View\Element\Template" name="footer-links" template="Magento_Theme::footer.phtml" /> 
        </referenceContainer>     -->
    
    </body>
</page>